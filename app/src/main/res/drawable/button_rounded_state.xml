<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- See: https://stackoverflow.com/a/9335683 -->
    <!--  Non focused states-->
    <item android:state_focused="false" android:state_selected="false"
        android:state_pressed="false" android:drawable="@drawable/button_rounded_unselected" />

    <item android:state_focused="false" android:state_selected="true"
        android:state_pressed="false" android:drawable="@drawable/button_rounded_unselected" />

    <!--  Focused states-->
    <item android:state_focused="true" android:state_selected="false"
        android:state_pressed="false" android:drawable="@drawable/button_rounded_selected" />

    <item android:state_focused="true" android:state_selected="true"
        android:state_pressed="false" android:drawable="@drawable/button_rounded_selected" />

    <!--  Pressed-->
    <item android:state_pressed="true" android:drawable="@drawable/button_rounded_pressed" />

</selector>