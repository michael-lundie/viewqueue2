<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorTransparent</item>
        <!-- Support library compatibility -->
        <item name="background">@color/colorTransparent</item>
    </style>

    <!-- Generic Root Layout Style for Coordinator type -->
    <item type="id" name="main_content"/>
    <style name="RootCoordLayout">
        <item name="android:id">@id/main_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!-- Generic Toolbar Style -->
    <item type="id" name="toolbar"/>
    <style name="ToolbarStyle">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
    </style>

    <!-- Generic Overlay AppBar Style -->
    <item type="id" name="appbar"/>
    <style name="OverlayAppBarStyle">
        <item name="android:id">@id/appbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>
</resources>
